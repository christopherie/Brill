            android:screenOrientation="portrait"/>
        <activity android:name=".GetLocation"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAsiaiSRSQitdVhS-qxVR3mPtU00Vq4o34" />

